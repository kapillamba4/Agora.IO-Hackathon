<html>
    <head>
        <title>{{title}}</title>
        <link href="/css/main.css" rel="stylesheet" />
        <script src="/libs/axios.min.js"></script>
        <script src="/libs/jquery.min.js"></script>
    </head>
    <body>
        {{> header this}}
        <form class="form-wrapper" action="/question/create" method="post">
            <div class="form-heading">Add new Question</div>
            <input type="text" placeholder="Question" name="question" />
            <input type="text" placeholder="Answer" name="answer" />
            <input type="submit" value="Submit" />
        </form>
        <form class="form-wrapper" action="/interview/create" method="post">
            <ul>
            {{#each questions}}
                <li>
                    <span>Question: {{this.question}}</span>
                    <input type="checkbox" name="questions[]" value={{this.question}} />
                    <div>Answers: </div>
                    <ol>
                    {{#each this.possibleAnswers}}
                        <li>{{this}}</li>    
                    {{/each}}
                    </ol>
                </li>
            {{/each}}
            </ul>
            <input type="submit" value="Submit" value="Create Interview" />
            <input type="submit" formaction="/question/delete" value="Delete Selected" />
        </form>
    </body>
</html>
